<form action="/log_entry" method="post">
  <label>Location:</label>
  <input type="text" name="log_entry[location]" placeholder="28.681876, -93.173610">
  <br></br>

  <label>Weather:</label>
  <input type="text" name="log_entry[weather]" placeholder="Cloudy, 92Â°F">
  <br></br>

  <label>Date:</label>
  <input type="date" name="date">
  <br></br>
  <label>Time:</label>
  <input type="time" name="time">
  <br></br>

  <label>Moon Phase:</label>
  <select name="log_entry[moon_phase]">
    <option value="Full Moon">Full Moon</option>
    <option value="Waning Gibbous">Waning Gibbous</option>
    <option value="Third Quarter">Third Quarter</option>
    <option value="Waning Crescent">Waning Crescent</option>
    <option value="New Moon">New Moon</option>
    <option value="Waxing Crescent">Waxing Crescent</option>
    <option value="First Quarter">First Quarter</option>
    <option value="Waxing Gibbous">Waxing Gibbous</option>
  </select>


  <br></br>

  <label>Comments:</label>
  <br></br>
  <textarea name="log_entry[comments]" rows="10" cols="30">
  </textarea>
  <br></br>

  <label>Include in Logbooks:</label>
  <br></br>
  <% @logbooks.each do |logbook| %>
    <input type="radio" name="logbook[id]" value="<%= logbook.id %>"><%= logbook.name %></input>
  <% end %>

  <br></br>

  <input type="submit" value="Create Log">
</form>
